[module/fan]

type = custom/script

exec = cat /proc/acpi/ibm/fan | grep -oP "speed:\s+\K(\d+)" | awk '{print "󰈐  " $0 " RPM"}'
interval = 3
exec-if = "test -e /proc/acpi/ibm/fan"
tail = true

[module/host]

type = custom/script

exec = cat /etc/hostname
interval = 180
format = 󰪫 <label>
format-background = ${color.bg}
format-foreground = ${color.fg}

[module/updates]

type = custom/script

exec = yay -Qu | wc -l
exec-if = yay -Syy && yay -Qu | wc -l | xargs -I{} test {} -gt 0
tail = false
interval = 3600

label = %output%
format = 󰣇 <label>
format-background = ${color.bg}
format-foreground = ${color.fg}

click-left = $TERMINAL -e yay

[module/monitor]

type = custom/script

exec = echo $MONITOR
tail = false
interval = 3900

label = %output%
format = 󰍹 <label>
format-background = ${color.bg}
format-foreground = ${color.fg}

[module/window]

type = internal/xwindow

format = <label>
label = 󰖯 %title%
label-maxlen = 80