#! /bin/bash

export WM="bspwm"

DIR="$(dirname "$0")/modules"

MODE="start"

if [ "$1" == "--dry-run" ]; then
	if [ -n "$2" ]; then
		MODE="$2"
	fi
elif [ -n "$1" ]; then
	MODE="$1"
fi

RUNCFG=$(cat "$DIR/rc.conf" | \
		 sed '/^#/d; /^$/d; 0,/^\['"$MODE"'\]/d; /\[.*/,$d')

RUNLIST=""

for ENTRY in $(printf "$RUNCFG"); do

	MDIR=$(echo $ENTRY | sed "s:\/.*::")
	MLIST=$(echo $ENTRY | sed "s:.*\/::; s:,:\n:g")

	ENTRYLIST="$MLIST"

	if [ "$MLIST" == "*" ]; then
		ENTRYLIST=$(find "$DIR/$MDIR" -type f -printf "%P\n")
	fi

	ENTRYLIST=$(printf "$ENTRYLIST" | sed "s/^/$MDIR\//")

	RUNLIST="$RUNLIST$ENTRYLIST\n"

done

RUNLIST=$(printf "$RUNLIST" | awk '!a[$0]++')

if [ "$1" == "--dry-run" ]; then

	printf "[$MODE]\n$RUNLIST\n"
	exit

fi

for MOD in $(printf "$RUNLIST"); do

	MPATH="$DIR/$MOD"

	if [ -f "$MPATH" ]; then

		if [ ! -x "$MPATH" ]; then		
			chmod +x "$MPATH"
		fi

		if grep -q "# RC_ASYNC_LOCK" "$MPATH"; then

			WAIT=$("$MPATH" &> /dev/null&)

		else
		
			nohup "$MPATH" &> /dev/null&
		
		fi

	fi

done
