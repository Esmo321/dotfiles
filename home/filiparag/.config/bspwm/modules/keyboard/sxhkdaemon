#! /bin/sh
# DEPENDENCIES: sxhkd

export ROFI_STYLE="-theme Arc-Dark -icon-theme -lines 8 -show-icons"
export MODULES=$(realpath "$(dirname $0)/../")
export BSPWMRC=$(realpath "$(dirname $0)/../../")/bspwmrc

if [ "$1" == "restart" ]; then

	USER=$(whoami)

	WAIT=$(killall -u "$USER" -9 sxhkd)
	sxhkd &

elif [ "$1" == "reload" ]; then

	pkill -USR1 -x sxhkd

else

	sxhkd &

fi